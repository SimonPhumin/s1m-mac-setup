---
extends: default

rules:
  line-length:
    max: 180
    level: warning
  brackets:
    level: warning
    max-spaces-inside: 2
  braces:
    level: warning
    max-spaces-inside: 2
  colons:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent

ignore: |
  .github/*
  roles/*
